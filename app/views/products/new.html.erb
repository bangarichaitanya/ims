<h1>New Product</h1>

<%= form_for(@product) do |f| %>
    <p>
      <%= f.label :category_id %><br/>
      <%= f.grouped_collection_select(:category_id, Category.parent_categories, :sub_categories, :name, :id, :name, {:include_blank => '- Select -'}) %>
    </p>
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back', products_path %>